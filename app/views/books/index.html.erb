<div class="container">
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th colspan="3">Description</th>
      <th>Publish Year</th>
      <th>Rating</th>
    </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td colspan="3"><%= book.description %></td>
        <td><%= book.publish_year %></td>
        <td><%= book.rating %></td>
        <td><%= link_to "show", book %></td>
        <td><%= link_to "edit", edit_book_path(book) %></td>
        <td><%= link_to "delete", book, data: { "turbo-method": :delete }, class: "btn btn-danger ml-3" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>